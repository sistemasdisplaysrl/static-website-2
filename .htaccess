# Activar el motor de reescritura
RewriteEngine On

# Redirigir HTTP a HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Redirigir sin-www a www (displayimportador.com → www.displayimportador.com)
RewriteCond %{HTTP_HOST} ^displayimportador\.com [NC]
RewriteRule ^(.*)$ https://www.displayimportador.com/$1 [L,R=301]

# Redirigir index.html a raíz
RewriteCond %{THE_REQUEST} ^.*/index\.html
RewriteRule ^(.*)index.html$ https://www.displayimportador.com/$1 [R=301,L]